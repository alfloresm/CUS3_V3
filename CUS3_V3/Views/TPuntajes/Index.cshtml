@model IEnumerable<CUS3_V3.Models.TPuntaje>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CALIFICAR PARTICIPANTE</h2>
<div class="row">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <div>
                <h4 class="panel-title">Eleccion de Tanda</h4>
            </div>
        </div>

        <div class="panel panel-body form-group">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row col-xs-12 col-md-12 col-lg-12">
                    @*ViewData["FK_IUMT_CODTA"]*@
                    <div class="form-group  col-xs-12 col-md-12 col-lg-6">
                        <label class="control-label">Nº Tanda:</label>
                        @*@Html.TextBox("ntanda",ViewData["FK_IUMT_CODTA"])*@
                        <input id="tanda1" asp- class="form-control" placeholder="Tanda" type="number" name="tanda" value=@ViewData["tan"] />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group  col-xs-12 col-md-12 col-lg-6">
                        <hr>
                        
                            <a asp-action="Create" class="btn btn-block btn-success">CALIFICAR</a>
                        
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IpPuntaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpNumeroJurado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkVumtCodNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IpPuntaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpNumeroJurado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkVumtCodNavigation.PkVumtCod)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PkIpCodP">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PkIpCodP">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PkIpCodP">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
