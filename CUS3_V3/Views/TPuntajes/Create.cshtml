@model CUS3_V3.Models.TPuntaje

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>


<h2>CALIFICAR PARTICIPANTE</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <div class="col-lg-6 col-md-6 col-xs-12">
            <label class="control-label">Nº Tanda:</label>
            @*<label class="text-info" name="tanda"></label>*@
            @TempData["tanda"]
        </div>
        <div class="col-lg-6 col-md-6 col-xs-12">
            <label class="control-label">Descripcion:</label>
            <label class="text-info" name="categ"></label>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">

            <div class="col-md-6 col-xs-12 text-center">
                <a class="btn btn-block btn-lg btn-info" data-toggle="modal" data-target="#exampleModal">PISTA 1</a>
            </div>
            <hr />
            <div class="col-md-6 col-xs-12 text-center">
                <a class="btn btn-block btn-lg btn-info" data-toggle="modal" data-target="#exampleModal">PISTA 2</a>
            </div>
        </div>
        <hr />
        <div class="col-md-12">

            <div class="col-md-6 col-xs-12 text-center">
                <a class="btn btn-block btn-lg btn-info" data-toggle="modal" data-target="#exampleModal">PISTA 3</a>
            </div>
            <hr />
            <div class="col-md-6 col-xs-12 text-center">
                <a class="btn btn-block btn-lg btn-info" data-toggle="modal" data-target="#exampleModal">PISTA 4</a>
            </div>
        </div>
    </div>
    
</div>

<div>
    <a asp-action="Index">Elegir tanda</a>
</div>
<div class="modal" tabindex="-1" role="dialog" id="exampleModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Calificar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="IpNumeroJurado" class="control-label"></label>
                        <input asp-for="IpNumeroJurado" class="form-control" />
                        <span asp-validation-for="IpNumeroJurado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FkVumtCod" class="control-label"></label>
                        <select asp-for="FkVumtCod" class="form-control" asp-items="ViewBag.FkVumtCod"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IpPuntaje" class="control-label"></label>
                        <select id="ipPuntaje" asp-for="IpPuntaje" class="form-control">
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                        <span asp-validation-for="IpPuntaje" class="text-danger"></span>
                    </div>
                    @* <div class="form-group">*@
                    @*<input type="submit" value="Create" class="btn btn-default" />*@
                    @* </div> *@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary btn-success" value="Create">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
